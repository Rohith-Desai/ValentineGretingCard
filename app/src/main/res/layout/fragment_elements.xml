<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.ElementsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        android:id="@+id/elements_root_frame"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/sel_txt"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"

            android:text="Select Photo"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/sel_txt"
            android:background="@color/grey" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_below="@+id/sel_txt"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:id="@+id/camera_btn_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/camera_btn_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.35"
                    android:padding="2dp"
                    android:src="@drawable/camera_icon_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".65"
                    android:gravity="center"

                    android:text="Camera"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/gallery_btn_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/gallery_btn_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.35"
                    android:padding="2dp"
                    android:src="@drawable/gallery_icon_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".65"
                    android:gravity="center"

                    android:text="Gallery"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stickers_btn_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/stickers_btn_img"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_weight="1.35"
                    android:padding="4dp"
                    android:src="@drawable/sticker_icon_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".65"
                    android:gravity="center"
                    android:text="Stickers"

                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/hidden_down"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp"
            android:background="@color/water_mak_color_white"
            android:src="@drawable/hidden_down"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</FrameLayout>