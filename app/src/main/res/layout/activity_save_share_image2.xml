<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:id="@+id/save_share_banner_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/save_share_banner_ad"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/share_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:visibility="visible"
            />
        <!-- <LinearLayout
             android:id="@+id/back_to_home_linear"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:weightSum="2">

             <ImageView
                 android:id="@+id/back_to_img"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:tint="@color/black"
                 android:src="@drawable/ic_left_arrow" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:gravity="center_horizontal"
                 android:text="Back"
                 android:textColor="@color/black"
                 android:textSize="10sp" />
         </LinearLayout>-->


        <ImageView
            android:id="@+id/go_to_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_new"
            android:visibility="visible"
            app:tint="@color/white" />

        <!--  <TextView
              android:layout_width="0dp"
              android:layout_weight="2.5"
              android:layout_height="match_parent"
              android:gravity="center"

              android:paddingBottom="5dp"
              android:text="Share"
              android:textColor="@color/white"
              android:textSize="20sp"
              android:textStyle="bold" />-->

        <!-- <ImageView
             android:id="@+id/rate_app"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:padding="15dp"
             android:layout_height="match_parent"
             android:src="@drawable/like"
             android:tint="@color/white"
             android:gravity="center"
             android:visibility="visible"
            />-->
        <ImageView
            android:id="@+id/share_app"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/share_back"
            android:gravity="center"
            android:padding="17dp"
            android:visibility="visible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonShareFooter"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@+id/top_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.6">

            <ImageView
                android:id="@+id/share_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_bar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/instagramShare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_red"
                android:onClick="myClickHandler"
                android:padding="15dp"
                android:src="@drawable/insta_48x48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:text="Instagram"

                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/whatsup_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_green"
                android:onClick="myClickHandler"
                android:padding="15dp"
                android:src="@drawable/ic_whatsup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:text="Whatsapp"

                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/facebook_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_blue"
                android:onClick="myClickHandler"
                android:padding="15dp"
                android:src="@drawable/save_image_fb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:text="Facebook"

                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_more"
                android:onClick="myClickHandler"
                android:padding="15dp"
                android:src="@drawable/ic_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:text="More"

                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>